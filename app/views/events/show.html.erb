<% provide(:title, @event.title) %> 

<!-- Page Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <!-- Event Content -->
      <h1 class="center" class="wrap"><%= @event.title %></h1>
      <h3 class="center"><%= @event.date.strftime("%A %b. %e, %Y %l:%M %p") %></h3>
      <h3 class="center"><%= @event.address %></h3>
      <hr>
      <% if current_user&.id == @event.user_id %>
        <p class="center">Created by: <%= link_to @event.user.name, @event.user %></p>
      <% end %>
      <% if @event.picture? %>
        <div class="center">
          <%= image_tag @event.picture.url, class: "img-responsive", id: "event-show-image", alt: @event.picture %>
        </div>
      <% else %>
      <div class="center">
        <%= image_tag "event-show-default.jpg", class: "img-responsive", alt: "default-image" %>
      </div>
      <% end %><br>
      <h3 class="center">
      <%= @event.description %>
      </h3>
      <br>
      <% if current_user%>
        <% if (current_user.id == @event.user_id) && (@event.date > Time.now)  %>
          <p class="lead center" ><%= link_to "Tickets", event_tickets_path(@event, :key => @event.event_guid), class: "btn btn-primary", id: "show-edit-button" %><%= link_to "Edit Event", edit_event_path(@event, :key => @event.event_guid), class: "btn btn-primary", id: "show-edit-button" %><%= link_to "Delete Event", @event, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary", id: "delete_event_button" %></p>
        <% elsif @event.date > Time.now %>  
          <div id="attend_form" >
            <% if current_user.attending?(@event) %>
              <%= render "unattend" %>
            <% else %>
              <%= render "attend" %>
            <% end %>
          </div>
        <% else %>
          <p class="center">Event has ended</p>
        <% end %>
      <% else %>  
        <h4 class="lead center" >(Please <%= link_to "Log In", login_path %> or  <%= link_to "Sign Up", signup_path %> to attend and comment on this event)</h4>
      <% end %><br>

      <!-- Attendees -->
      <% if @event.date > Time.now %> 
        <p class="lead center">People attending this event (<span id="attendees"><%= @event.attendees.count %></span>)</p>
      <% else %>
        <p class="lead center" >People that attended this event (<span id="attendees"><%= @event.attendees.count %></span>)</p> 
      <% end %>
      <hr>
      <hr id="separator">

      <!-- Comments -->
      <h3 class="center" id="comment_count">Comments (<%= @event.comments.count %>)</h3>
      <hr>
      <div class="media comment_list" ">
        <%= render @comments %>
      </div>
      <% if current_user %>
        <div class="well">
          <h4>Leave a Comment:</h4>
          <%= render 'comments/form' %>
        </div>
      <% end %>

    </div>
  </div>
</div>

