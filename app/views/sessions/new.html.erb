  <% provide(:title, "Log In") %>

  <!-- Page Content -->
  <div class="container text-center">
    <div class="row">
      <h3>Log In</h3>
      <hr>
    </div> 
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: "form-control" %><br>
        </div>
      </div>  

      <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
          <%= f.label :password %><br>
          <%= f.password_field :password, class: "form-control" %><br>
        </div>
      </div>

      <%= f.submit "Login", class: "btn btn-primary" %><br><br>
    <% end %>

    <p>Don't have an account? <%= link_to "Sign Up Here", signup_path %></p>
  </div>